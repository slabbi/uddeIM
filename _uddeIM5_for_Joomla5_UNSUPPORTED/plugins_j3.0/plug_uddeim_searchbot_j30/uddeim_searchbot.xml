<?xml version="1.0" encoding="utf-8"?>
<extension version="1.6" type="plugin" group="search" method="upgrade">
	<name>uddeIM Searchbot</name>
	<creationDate>2017-10-01</creationDate>
	<author>Stephan Slabihoud</author>
	<copyright>Stephan Slabihoud. This is free software and you may redistribute it under the GPL. uddeIM comes with absolutely no warranty.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>ssl@gmx.de</authorEmail>
	<authorUrl>http://www.slabihoud.de/software/</authorUrl>
	<version>4.0</version>
	<description>Allows searching of uddeIM component</description>
	<files>
		<filename plugin="uddeim_searchbot">uddeim_searchbot.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text"
					default="50"
					description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
					label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
					size="5"
				/>
			</fieldset>
		</fields>
	</config>
</extension>